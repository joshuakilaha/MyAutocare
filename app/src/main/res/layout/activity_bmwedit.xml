<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".Admin.AdminViews.BMW.BMWEdit">

    <TextView
        android:id="@+id/titleBmw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="40dp"
        android:text="BMW ADD"/>

   <EditText
       android:id="@+id/bmw_name_part"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/titleBmw"
       android:layout_marginTop="16dp"
       android:hint="name of part"
       android:gravity="center"/>

    <EditText
        android:id="@+id/bmw_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmw_name_part"
        android:layout_marginTop="16dp"
        android:hint="Description"
        android:gravity="center"/>

    <Button
        android:id="@+id/bmw_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bmw_description"
        android:layout_marginTop="30dp"
        android:text="Choose Image"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bmw_choose_image"
        android:layout_alignLeft="@id/bmw_choose_image"
        android:layout_marginTop="16dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_upload"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp" />


    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Upload" />

    <TextView
        android:id="@+id/text_view_show_uploads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_upload"
        android:layout_alignTop="@+id/button_upload"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/button_upload"
        android:gravity="center"
        android:text="Show Uploads"
        android:textSize="16sp" />



</RelativeLayout>